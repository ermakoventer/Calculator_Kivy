<MyOwnButton@Button>
    background_color: [1, .58, 0, 1]
    font_size: '25sp'


<Container>:
    id: calculator
    display: entry
    rows: 6


    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.15

        TextInput:

            multiline: False
            text: ''
            id: entry
            font_size: '45sp'
            input_filter: 'float'
            input_type: 'number'

    GridLayout:

        cols: 4

        BoxLayout:
            orientation: 'vertical'

            MyOwnButton:
                text: '1'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '4'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '7'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '0'
                on_press: entry.text += self.text

        BoxLayout:
            orientation: 'vertical'

            MyOwnButton:
                text: '2'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '5'
                on_press: entry.text += self.text

            MyOwnButton:
                text: '8'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '.'
                on_press: entry.text += self.text
        BoxLayout:
            orientation: 'vertical'

            MyOwnButton:
                text: '3'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '6'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '9'
                on_press: entry.text += self.text
            MyOwnButton:
                text: 'AC'
                on_press: entry.text = ''
        BoxLayout:
            orientation: 'vertical'

            MyOwnButton:
                text: '*'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '/'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '-'
                on_press: entry.text += self.text
            MyOwnButton:
                text: '+'
                on_press: entry.text += self.text

    BoxLayout:
        size_hint: 1, 0.2
        Button:
            text: '='
            on_press: calculator.calculate(entry.text)
